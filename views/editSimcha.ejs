<form class="form-horizontal" method="post" action="/admin/editSimcha">
    <div class="form-group">
        <div class="col-md-2 text-left">
            <label class="control-label" for="name">Name </label>
        </div>
        <div class="col-md-8">
            <input class="form-control" type="text" name="name" id="name" value="<%= name %>">
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2 text-left">
            <label class="control-label" for="simchaType">Simcha Type </label>
        </div>
        <div class="col-md-8">
            <input class="form-control" type="text" name="simchaType" id="simchaType" value="<%= simchaType %>">
        </div>
    </div>
    <input type="hidden" name="id" value="<%= id %>">
    <div class="form-group text-left">
        <div class="col-md-2">
            <input class="btn btn-warning" type="submit" value="Submit">
        </div>
    </div>
</form>
<form class="form-horizontal" method="post" action="/admin/removeSimcha">
    <div "form-group">
        <input type="hidden" name="id" value="<%= id %>">
        <input class="btn btn-danger" type="submit" value="Delete Simcha">
    </div>
</form>