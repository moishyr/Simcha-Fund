<% if(data.length > 0) { %>
<table class="table table-bordered table-striped table-hover table-condensed">
    <thead>
        <tr>
        <% Object.keys(data[0]).forEach(rowInColumn => { %>
            <% if(rowInColumn !== 'id' && rowInColumn !== 'active' ) { %>
                <th>
                    <%= rowInColumn %>
                </th>
            <% } %>
        <% }); %>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% Object.keys(data).forEach(function(keys) {
            var tableColumns = data[keys];
            if(data[keys].active) { %>
                <tr>
                    <%  var id = null,
                            name = '',
                            simchaType = '';
                    Object.keys(data[keys]).forEach(rowInColumn => {
                        if( rowInColumn !== 'id' && rowInColumn !== 'active' ) { %>
                            <td>
                                <%= tableColumns[rowInColumn] %>
                            </td>
                        <% } 
                        if(rowInColumn === 'id') { 
                            id = tableColumns[rowInColumn]; 
                        }
                        if(rowInColumn === 'name') {
                            name = tableColumns[rowInColumn];
                        }
                        if(rowInColumn === 'Simcha Type') {
                            simchaType = tableColumns[rowInColumn];
                        }
                    }); %>
                    <td class="text-center"><a class="btn btn-default btn-sm" href="./addOrRemoveSimcha?id=<%= id %>&name=<%= name %>&simchaType=<%= simchaType %>">edit/remove</a></td>
                </tr>
            <% } %>
        <% }); %>
    </tbody>
</table>
<% } else { %>
<div class="well text-center">There are no contributors in the database</div>
<% } %>